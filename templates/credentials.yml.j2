---
controller_projects_{{ env }}:
{%- for credential in credentials -%}
{{ '\n' -}} - name: {{ credential.name }}
{%- if credential.description != '' -%} 
{{ '\n' -}}{{ '\t' -}}description: {{ credential.description }}
{%- endif -%}
{%- if credential.organization is defined and credential.organization != '' -%} 
{{ '\n' -}}{{ '\t' -}}organization: {{ credential.organization }}
{%- endif -%}
{{ '\n' -}} - credential_type: {{ credential.credential_type }}
{%- if credential.inputs is defined  -%} 
{{ '\n' -}}inputs:
{%- for input in credential.inputs -%}
{{ '\n' -}}{{ '\t' -}}{{ '\t' -}}{{ input }}: '{{ credential.inputs[input] }}'
{%- endfor -%}
{%- endif -%}
{%- endfor -%}
