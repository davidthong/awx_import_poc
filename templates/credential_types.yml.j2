---
controller_credential_types_{{ env }}:
{%- for credential_type in credential_types -%}
{% filter indent(width=2) %}
{{ '\n' -}}- name: {{ credential_type.name }}
description: {{ credential_type.description }}
inputs:
fields:
{%- for field in credential_type.inputs.fields -%}{{ '\n' }}{{' ' | indent(4) }}- type: {{ field.type }}
{{' ' | indent(4) }}id: {{ field.id }}
{{' ' | indent(4) }}label: {{ field.label }}
{%- if field.secret is defined and field.secret -%} 
{{ '\n' -}}{{' ' | indent(4) }}secret: {{ field.secret }}
{%- endif -%}
{%- endfor -%}
{%- if credential_type.inputs.required is defined  -%} 
{{ '\n' -}}required: 
{%- for requirement in credential_type.inputs.required -%}
{{ '\n' -}}- {{ requirement }}
{%- endfor -%}
{%- endif -%}
{{ '\n' -}}injectors: 
{%- if credential_type.injectors.env is defined  -%} 
{{ '\n' -}}env:
{%- for env in credential_type.injectors.env -%}
{{ '\n' -}}{{' ' | indent(4) }}{{ env }}: '{{ credential_type.injectors.env[env] }}'
{%- endfor -%}
{%- endif -%}
{%- if credential_type.injectors.file is defined  -%} 
{{ '\n' -}}file:
{%- for file in credential_type.injectors.file -%}
{{ '\n' -}}{{' ' | indent(4) }}{{ file }}: '{{ credential_type.injectors.file[file] }}'
{%- endfor -%}
{%- endif -%}
{%- if credential_type.injectors.extra_vars is defined  -%} 
{{ '\n' -}}extra_vars:
{%- for extra_var in credential_type.injectors.extra_vars -%}
{{ '\n' -}}{{' ' | indent(4) }}{{ extra_var }}: '{{ credential_type.injectors.extra_vars[extra_var] }}'
{%- endfor -%}
{%- endif -%}
{% endfilter %}
{%- endfor -%}